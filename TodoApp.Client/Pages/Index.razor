
@page "/"
@using System.Net.Http.Json
@inject HttpClient Http

<h3>To-Do List</h3>

<input @bind="newTodo" placeholder="Add new todo..." />
<button @onclick="AddTodo">Add</button>

<ul>
    @foreach (var todo in todos)
    {
        <li>
            <input type="checkbox" checked="@todo.IsDone" @onchange="@((ChangeEventArgs e) => ToggleTodo(todo, (bool)e.Value!))" />
            @todo.Title
            <button @onclick="() => DeleteTodo(todo.Id)">Delete</button>
        </li>
    }
</ul>

@code {
    private List<TodoItem> todos = new();
    private string newTodo = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            todos = await Http.GetFromJsonAsync<List<TodoItem>>("https://localhost:5001/api/todo") ?? new List<TodoItem>();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading todos: {ex.Message}");
            todos = new List<TodoItem>();
        }
    }

    private async Task AddTodo()
    {
        if (!string.IsNullOrWhiteSpace(newTodo))
        {
            var item = new TodoItem { Title = newTodo, IsDone = false };
            var response = await Http.PostAsJsonAsync("https://localhost:5001/api/todo", item);
            if (response.IsSuccessStatusCode)
            {
                todos = await Http.GetFromJsonAsync<List<TodoItem>>("https://localhost:5001/api/todo") ?? new List<TodoItem>();
                newTodo = string.Empty;
            }
        }
    }

    private async Task UpdateTodo(TodoItem todo)
    {
        await Http.PutAsJsonAsync($"https://localhost:5001/api/todo/{todo.Id}", todo);
    }

    private async Task ToggleTodo(TodoItem todo, bool isDone)
    {
        todo.IsDone = isDone;
        await UpdateTodo(todo);
    }

    private async Task DeleteTodo(int id)
    {
        await Http.DeleteAsync($"https://localhost:5001/api/todo/{id}");
        todos = await Http.GetFromJsonAsync<List<TodoItem>>("https://localhost:5001/api/todo") ?? new List<TodoItem>();
    }

    public class TodoItem
    {
        public int Id { get; set; }
        public string Title { get; set; } = string.Empty;
        public bool IsDone { get; set; }
    }
}
